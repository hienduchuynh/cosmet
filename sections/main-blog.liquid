{%- liquid
  assign blog_layout = settings.blog_layout
-%}

{%- liquid
  if blog_layout == "01" 
    render 'blog-default'
  elsif blog_layout == "02" 
    render 'blog-simple'
  elsif blog_layout == "03" 
    render 'blog-full-width'  
  endif
-%}

